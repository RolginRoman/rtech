---
import { generateCSS } from './fluid-design.builder';
import type { Configuration } from './interface.provider';

interface Props {
  injectSelector?: string;
  postprocess?: (css: string) => string;
  config: Configuration;
}

const {
  injectSelector = 'html',
  postprocess = (css: string) => css,
  config,
} = Astro.props;

const output = postprocess(generateCSS(config, injectSelector));
---
<style set:html={output}></style>
